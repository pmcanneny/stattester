<script>

var inputVals = document.getElementsByTagName('input');

function money() {

this.value = accounting.formatMoney(this.value, "$", 0, ",", ",");

}

for ( var i = 0; i < inputVals.length; i++ ) {
if ( ( inputVals[i].value != "Update & Save" ) && ( inputVals[i].name != "authenticity_token" ) ) {
