
<%= form_for(@user, :url => {:controller=>:access,:action => :create}) do |f| %>
  
  <%= show_notice(notice) %>
  <% if notice.nil? %>
  <% end %>

   <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<div class="content">

	
	<table>
	
		<tr>
			<td colspan="2"><h1>Registration Form</h1></td>
		</tr>
	
		<tr>
			<td>What Best Describes You:</td><td><%= f.select(:subtype, User.subtype_options, :include_blank => true, :label => 'Your Classification') %></td>
		</tr>

		<tr>
			<td>Your Email Address:</td><td><%= f.text_field :email %></td>
		</tr>

		<tr>
			<td>Confirm Email Address:</td><td><%= f.text_field :email_confirmation %></td>
		</tr>

		<tr>
			<td>Password:</td><td><%= f.password_field :password %></td>
		</tr>
	
		<tr>
			<td>Confirm Password:</td><td><%= f.password_field :password_confirmation %></td>
		</tr>

		<tr>
	
			<td colspan="2" class="center">
	
				<p><%= f.submit %></p>
		
				<p><%= link_to 'Cancel', root_url %></p>
		
			</td>
		
		</tr>

	</table>

</div>
  
<% end %>