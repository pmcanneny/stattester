<h1>Edit Company</h1>

<%= form_for(@company, :url => {:controller=>:summary_sheet,:action => :updatecompany}) do |f| %>	
	<table>
		<tr class="<%= cycle("even", "odd") %>">
			<td><%= f.label "Company Name:" %></td>
			<td><%= f.text_field :name %></td>
		</tr>
		<tr class="<%= cycle("even", "odd") %>">
			<td><%= f.label "Combined Reporting Entity?:" %></td>
			<td><%= f.select(:combination, Company.combination_options, :default => 2, :class => "rowform") %></td>
		</tr>
		<tr class="<%= cycle("even", "odd") %>">
			<td><%= f.label "Ownership:" %></td>
			<td><%= f.select(:ownership, Company.ownership_options, :include_blank => "", :class => "rowform") %></td>
		</tr>
		<tr class="<%= cycle("even", "odd") %>">
			<td><%= f.label "SIC:" %></td>
			<td><%= f.number_field :sic %></td>
		</tr>
		<tr class="<%= cycle("even", "odd") %>">
			<td><%= f.label "Country:" %></td>
			<td><%= f.select(:country, Company.country_options, :class => "rowform") %></td>
		</tr>
		<tr class="<%= cycle("even", "odd") %>">
			<td><%= f.label "Region:" %></td>
			<td><%= f.select(:region, Company.region_options, :include_blank => "", :class => "rowform") %></td>
		</tr>

		<%= f.hidden_field(:id) %>		

		<tr class="<%= cycle("even", "odd") %>">
			<td><%= f.submit %></td><td><%= link_to 'Cancel', summary_sheet_url %></td>
		</tr>
	</table>
<% end %>
